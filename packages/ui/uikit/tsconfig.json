{
  "extends": "@flippo/tsconfig",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node", "react", "react-dom"],
    "allowJs": true,
    "checkJs": false,
    "isolatedDeclarations": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "eslint.config.js"]
}
